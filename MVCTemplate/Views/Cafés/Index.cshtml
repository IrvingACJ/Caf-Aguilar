@model IEnumerable<MVCTemplate.Models.Cafés>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tamaños.Tamaño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tbody>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tamaños.Tamaño)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDcafé }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDcafé }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDcafé })
            </td>
        </tr>
    </tbody>
    }

</table>

<script>
    $(document).ready(function () {
        $('#DT_Cafés').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf'
            ]
        });
    });
</script>
