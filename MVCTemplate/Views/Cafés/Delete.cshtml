@model MVCTemplate.Models.Cafés

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Cafés</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.HiddenFor(model => model.IDcafé)
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tamaños.Tamaño)
            </dt>

            <dd>
                @Html.HiddenFor(model => model.IDtamaño)
                @Html.DisplayFor(model => model.Tamaños.Tamaño)
            </dd>
        </dl>
        <div class="form-actions no-color">
            <button class="btn btn-danger" onclick="Borrar()">Borrar</button>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>

    <script>
        function Borrar() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete2", "Cafés")',
                data: { IDcafé: $('#IDcaf_').val()},
                success: function (response) {
                    window.location.href = response;
                },
                error: function (exception) {
                    console.log("error" + exception);
                }
            });
        }
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}