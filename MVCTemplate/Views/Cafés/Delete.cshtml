@model MVCTemplate.Models.Cafés

@{
    ViewBag.Title = "Eliminar Café";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class=" text-center" style="font-weight:500">Eliminar</h1>

<h3 class="text-center">¿Estás seguro?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.HiddenFor(model => model.IDcafé)
        <h4> @Html.DisplayFor(model => model.Nombre)</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Precio)
            </dt>

            <dd>
                $ @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tamaños.Tamaño)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tamaños.Tamaño)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tipos.Tipo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tipos.Tipo)
            </dd>


        </dl>
        <div class="form-actions no-color">
            <label for="Eliminar" class="btn btn-danger">Eliminar</label>
            <input id="Eliminar" type="submit" value="Delete" class="btn btn-default hidden" />|
            @Html.ActionLink("Volver", "Index")
