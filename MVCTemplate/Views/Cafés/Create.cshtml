@model MVCTemplate.Models.Cafés

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Cafés</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" >
            <select id="SelectTamaños" class="cs-select cs-skin-slide" data-init-plugin="cs-select" style="width:200%"></select>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-success" onclick="Crear()">Crear</button>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '@Url.Action("GetList", "Cafés")',
                data: { },
                success: function (response) {
                    var x = JSON.parse(response);
                    var select = $('#SelectTamaños');
                    select.empty();
                    $.each(x, function (value, key) {
                        console.log(value);
                        console.log(key);
                        select.append('<option value=' + key.IDtamaño + '>' + key.Tamaño + '</option>');
                    });
                    select.select2();
                },
                error: function (exception) {
                    console.log("error" + exception);
                }
            });
        });
        function Crear() {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Create2", "Cafés")',
                data: { nombre: $('#Nombre').val(), id_tamaño: $('#SelectTamaños option:selected').val() },
                success: function (response) {
                    window.location.href = response;
                },
                error: function (exception) {
                    console.log("error" + exception);
                }
            });
        }
</script>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
