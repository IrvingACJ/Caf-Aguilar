@model IEnumerable<MVCTemplate.Models.Orden>

@{
    ViewBag.Title = "Ordenes";
}
<h1 class=" text-center" style="font-weight:500; font-family: 'Pattaya', sans-serif;">Ordenes</h1>

<table class="table" id="tableRes">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th> Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Fecha
                </td>
                <td>
                    @item.total
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.IDorden })
                </td>
            </tr>
        }

    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#tableRes').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf'
            ]
        });
    });
</script>
